{
  "name": "cool-idea-generator",
  "version": "0.1.0",
  "private": true,
  "main": "src/client/app.js",
  "engines": {
    "node": "8.12.0",
    "yarn": "1.12.3"
  },
  "scripts": {
    "build": "cd src && cd client && yarn build",
    "client": "cd src && cd client && react-scripts start",
    "server": "nodemon src/index.js --exec babel-node --presets env,stage-2",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.11.6",
    "concurrently": "^4.0.1",
    "nodemon": "^1.10.0"
  },
  "dependencies": {
    "apollo-boost": "^0.1.20",
    "babel-plugin-styled-components": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.17.3",
    "express-graphql": "^0.6.12",
    "graphql": "git://github.com/graphql/graphql-js.git#npm",
    "graphql-tools": "^2.24.0",
    "mongoose": "^5.0.14",
    "react": "^16.6.1",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.6.1",
    "react-redux": "^5.1.1",
    "react-scripts": "2.1.1",
    "redux": "^4.0.1",
    "styled-components": "^4.0.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
